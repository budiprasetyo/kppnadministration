			<div id='user'>"
			. $_SESSION[namauser]  .
			"</div>
			Seksi: <div id='seksi'>";
			switch($_SESSION[seksi]){
					case UM:
						echo 'Sub Bagian Umum';
						break;
					case VR:
						echo 'Verifkasi & Akuntansi';
						break;
					case PD:
						echo 'Pencairan Dana';
						break;
					case BP:
						echo 'Bank & Giro Pos';
						break;
					case APD:
						echo 'Kepala Seksi Pencairan Dana';
						break;
			}
		echo "</div>
				</div>";
		}
		
		
