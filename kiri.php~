elseif($_POST['Updatedataarsip'] == 'Update'){
	$nosp2d	= $_POST['nosp2d'];
	$norak		= $_POST['norak'];
	$nobaris	= $_POST['nobaris'];
	$nobox		= $_POST['nobox'];
	$lokasi_file	=$_FILES['file']['tmp_name'];
	$nama_file	=$_FILES['file']['name'];
	$direktori	='/opt/lampp/htdocs/kppn/file/'.basename($nama_file);
	if(empty($nama_file)){			
		mysql_query("UPDATE d_arsipsp2d SET norak='$norak', nobaris='$nobaris', nobox='$nobox'  WHERE nosp2d='$nosp2d'");
		echo "<script type='text/javascript'>
				alert('Nomor SP2D $nosp2d telah dilakukan perubahan data arsipnya dengan nomor rak $norak, nomor baris $nobaris, nomor box $nobox!');
				window.location.replace('media.php?module=home');
		</script>";
	}	
	else{
		move_uploaded_file($lokasi_file,$direktori);
		mysql_query("UPDATE d_arsipsp2d SET file='$nama_file', norak='$norak', nobaris='$nobaris', nobox='$nobox'  WHERE nosp2d='$nosp2d'");
		echo "<script type='text/javascript'>
				alert('Nomor SP2D $nosp2d telah dilakukan perubahan data arsipnya dengan nomor rak $norak, nomor baris $nobaris, nomor box $nobox!');
				window.location.replace('media.php?module=home');
			</script>";
	}
}
