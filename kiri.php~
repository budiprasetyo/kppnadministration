		$norak		= $_POST['norak'.$i];
		echo $norak."<br />";
		$nobaris	= $_POST['nobaris'.$i];
		echo $nobaris."<br />";
		$nobox		= $_POST['nobox'.$i];
		echo $nobox."<br />";
		
		mysql_query("UPDATE d_arsipsp2d SET norak='$norak', nobaris='$nobaris', nobox='$nobox' WHERE nosp2d='$nosp2d'");
		
		echo "<script type='text/javascript'>
				window.location.href='media.php?module=insertarsip';
		</script>";
		
	}
